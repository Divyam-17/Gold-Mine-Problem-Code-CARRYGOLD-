#include <iostream>
using namespace std;

int main() {
	// your code goes here
	int t,n,x,y;
	//std::cout << "Enter testcases" << std::endl;
	cin>>t;
    while(t--){
        cin>>n>>x>>y;
        int v=(n+1)*y;
        if(x>v)
        {
            printf("NO\n");
        }
        else
        {
             printf("YES\n");
        }
    }
	return 0;
}
